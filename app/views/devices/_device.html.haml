%tr{:class => device.inactive? ? "info" : ""}
  %td= link_to device.id, device
  - if (device.inactive?)
    %td= link_to device.description, '#', "data-toggle" => "tooltip", "data-placement" => "right", "title" => "Device is inactive and not in production. EZCash will not drive this ATM, and it is not counted toward licensed devices."
  - else
    %td= device.description
  %td= device.online.present? ? device_state_descriptions[device.online] : ''
  %td
    - if device.critical_status?
      %a.btn.btn-xs.btn-danger{"data-content" => "#{render 'clear_status_content', device: device}", "data-html" => "true", "data-toggle" => "popover", "data-trigger" => "focus", :role => "button", :tabindex => "0", :title => "Clear #{device.description}'s Status"} Critical
    - elsif device.caution_status?
      %a.btn.btn-xs.btn-warning{"data-content" => "#{render 'clear_status_content', device: device}", "data-html" => "true", "data-toggle" => "popover", "data-trigger" => "focus", :role => "button", :tabindex => "0", :title => "Clear #{device.description}'s Status"} Warning
  = render partial: 'bin_details', locals: {device: device}
  %td= number_to_currency(device.remaining)

:javascript
  // Add these so that javascript tooltip and popover still work 
  $("[data-toggle='tooltip']").tooltip()
  $("[data-toggle='popover']").popover()