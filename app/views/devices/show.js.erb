$('#transactions_index').append('<%= j render @transactions %>');
$('#spinner').hide();

<% if @transactions.next_page %>
  $('a.load-more-transactions').show();
  $('a.load-more-transactions').attr('href', '<%= device_path(@device, transactions_page: @transactions.next_page) %>');
<% else %>
  $(window).off('scroll');
  $('a.load-more-transactions').remove();
<% end %>